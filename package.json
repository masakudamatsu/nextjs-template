{
  "name": "nextjs-template",
  "version": "1.0.0",
  "description": "A template repository for Next.js web dev projects",
  "main": "pages/index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|json)\"",
    "test": "jest --watch",
    "e2e": "cypress open",
    "test:e2e": "start-server-and-test dev http://localhost:3000 e2e",
    "test:single": "jest",
    "snapshot": "cypress run --spec \"cypress/component/**/*\"",
    "snapshot:update": "cypress run --env updateSnapshots=true --spec \"cypress/component/**/*\"",
    "cy:run": "cypress run",
    "test:precommit": "npm-run-all --parallel test:single cy:run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/masakudamatsu/nextjs-template.git"
  },
  "keywords": [
    "Next.js"
  ],
  "author": "Masa Kudamatsu <masakudamatsu@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/masakudamatsu/nextjs-template/issues"
  },
  "homepage": "https://github.com/masakudamatsu/nextjs-template#readme",
  "dependencies": {
    "next": "^10.0.3",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-error-boundary": "3.1.0",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "@testing-library/cypress": "^7.0.2",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.2.2",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-plugin-styled-components": "^1.12.0",
    "cypress": "^6.0.1",
    "cypress-image-snapshot": "4.0.0",
    "cypress-react-unit-test": "4.17.1",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^3.10.1",
    "ghooks": "^2.0.4",
    "jest": "^26.6.3",
    "jest-axe": "^4.1.0",
    "jest-in-case": "^1.0.2",
    "jest-styled-components": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.0",
    "start-server-and-test": "^1.11.6"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run test:precommit"
    }
  }
}
